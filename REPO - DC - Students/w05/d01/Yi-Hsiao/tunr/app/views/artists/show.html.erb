<h1><%= @artist.name %></h1>

<%= image_tag(@artist.photo_url) %>

<dl>
  <dt>Genre:</dt>
  <dd><%= @artist.name %></dd>
  <dt>Songs:</dt>
  <ul>
    <% @songs.each do |song| %>
      <li>
        <%= song.title %>
        <%= link_to "Edit song", edit_song_path(song), id: "edit_song_#{ song.id }" %>
        <%= button_to "Delete song", song, method: :delete, id: "delete_song_#{ song.id }" %>
      </li>
    <% end %>
  </ul>
</dl>

<%= link_to "Add song", new_artist_song_path(@artist) %>
<%= button_to "Delete artist", @artist, method: :delete %>