<h1>Taken on <%= @pic.date_taken %></h1>

<h2><img src="<%= @pic.photo_url %>" ></h2>

<h2>Author: <%= @pic.author %> </h2>



<form action="/photos/<%= @pic.id %>/edit">
    <button>Update This Photo</button>
  </form>


<form action="/photos/<%= @pic.id %>" method="post">
    <input type="hidden" name="_method" value="delete">

    <input name="authenticity_token" type="hidden" value="<%=form_authenticity_token%>">

    <button>Delete This Auth</button>
  </form>

<br><a href="/photos">All Photos</a></br>
