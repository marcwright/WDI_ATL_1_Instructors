<form action="/cars/<%= @car.id %>" method="post">
  <input name="_method" type="hidden" value="patch" >
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label>Color:<input type="text" name="color" value="<%= @car.color %>"></label>
  <label>Year:<input type="integer" name="year" value="<%= @car.year %>"></label>
  <label>Make:<input type="text" name="make" value="<%= @car.make %>"></label>
  <label>Model:<input type="text" name="model" value="<%= @car.model %>"></label>
  <label>Image URL:<input type="text" name="image_url" value="<%= @car.image_url %>"></label>

  <input type="submit" value="Edit this car!">
</form>
