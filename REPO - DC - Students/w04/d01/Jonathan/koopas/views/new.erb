<h1>Create a Koopa</h1>

<form action="/" method="post">

  <label>
    Name:
    <input type="text" name="name">
  </label>
<br>
  <label>
    Color:
    <input type="text" name="color">
  </label>
<br>
  <label>
    Has a Shell?:
    <input type="checkbox" name="has_shell">
  </label>
<br>
  <label>
    Image URL:
    <input type="text" name="image_url">
  </label>
<br>
  <button>Submit</button>
</form>
