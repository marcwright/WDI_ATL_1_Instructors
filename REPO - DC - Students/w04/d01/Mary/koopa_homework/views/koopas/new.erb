<h1>Create a Koopa!!</h1>

<form action="/koopas" method="post">
  <label>
    Name:
    <input type="text" name="name">
  </label>

  <label>
    Color:
    <input type="text" name="color">
  </label>

  <label>
    Has shell?:
    <input type="checkbox" name="has_shell">
  </label>

  <label>
    Image URL:
    <input type="text" name="image_url">
  </label>

  <button>Create!</button>


</form>
