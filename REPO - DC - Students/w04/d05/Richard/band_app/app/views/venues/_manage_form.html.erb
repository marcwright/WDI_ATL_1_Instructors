
<%= form_for @venue do |f| %>
  <%=f.label :name %>
  <%= f.text_field :name %>

  <%=f.label :city %>
  <%= f.text_field :city %>

  <%=f.label :state %>
  <%=f.select :state, options_for_select(us_states)%>

  <%=f.label :allows_explicit_lyrics %>
  <%=f.check_box :allows_explicit_lyrics, {:checked=>true}%>

  <%= f.submit "Add new venue" %>
<% end %>


