<h1>Edit an existing author</h1>

<form action="/authors/<%= @author.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Name:<input type="text" name="name" value="<%= @author.name %>"></label>
  <label>DOB:<input type="date" name="dob" value="<%= @author.dob %>"></label>
  <label>Gender:<input type="text" name="gender" value="<%= @author.gender %>"></label>
  <label>Pseudonym?<input type="text" name="has_pseudonym" value="<%= @author.has_pseudonym %>"></label>

  <input type="submit" value="Edit author">
</form>
