<h1>Add an author</h1>

<form action="authors" method="post">
  <input name="authenticity-token" type="hidden" value="<%= form_authenticity_token %>">

  <label>Name:<input type="text" name="name"></label>
  <label>DOB:<input type="date" name="dob"></label>
  <label>gender:<input type="text" name="gender"></label>
  <label>Pseudonym? (true/false) :<input type="boolean" name="has_pseudonym"></label>

  <input type="submit" value="Create author">
</form>
