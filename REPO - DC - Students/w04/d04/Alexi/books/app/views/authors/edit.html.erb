<h1>Edit a author</h1>

<form action="/authors/<%= @author.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label>
    Name:
    <input type="text" name="name" value="<%= @author.name %>" >
  </label>

  <label>
    Age:
    <input type="date" name="birth" value="<%= @author.birth %>">
  </label>

  <label>
    Gender:
    <input type="text" name="gender" value="<%= @author.gender %>">
  </label>

  <label>
    Has Pseudonym?
    <input type="checkbox" name="has_pseudo" value="<%= @author.has_pseudo %>">
  </label>

  <input type="submit" value="Edit author">
</form>
