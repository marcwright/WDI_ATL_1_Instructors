<div class="page">
  <% if params[:author_id] %>
    <h1>There are all the books by <%= @author.name %></h1>

    <ul>
      <% @books.each do |book| %>
        <li><a href="/authors/<%= book.author_id %>/books/<%= book.id %>"><%= book.title %></a></li>
      <% end %>
    </ul>

    <p><a href="/authors/<%= @author.id %>/books/new">Add a Book</a></p>
    <p><a href="/">Home</a></p>
    <p><a href="/authors">All Authors</a></p>

  <% else %>
    <h1>All of the Books:</h1>

    <% @books.each do |book| %>
      <h2><a href="/books/<%= book.id %>"><%= book.title %></a></h2>
    <% end %>

    <p><a href="/">Home</a></p>

  <% end %>
</div>
