<h1>Add a new book for this author!</h1>

<form action="/authors/<%= params[:author_id] %>/books" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
  <label>
    Title:
    <input type="text" name="title">
  </label>

  <label>
    Release Date:
    <input type="text" name="release_date" value="yyyy-mm-dd">
  </label>

  <label>
    Genre:
    <input type="text" name="genre">
  </label>

  <input type="submit" value="Add this book!">

</form>
