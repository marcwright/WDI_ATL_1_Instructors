<h1>Add a new author!</h1>
<form action="/authors" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >
  <label>
    Name:
    <input type="text" name="name">
  </label>

  <label>
    Gender:
    <input type="text" name="gender">
  </label>

  <label>
    Date of Birth:
    <input type="text" name="date_of_birth" value="yyyy-mm-dd">
  </label>

  <label>
    Has Pseudonym?
    <input type="checkbox" name="has_pseudonym">
  </label>

  <button>Submit this author</button>

</form>
