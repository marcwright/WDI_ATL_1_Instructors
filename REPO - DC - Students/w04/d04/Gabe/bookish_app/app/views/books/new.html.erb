<h1>Add A New Book</h1>

<form action="/authors/<%= books.author_id %>/books" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label>
    Title:
    <input type="text" name="name" >
  </label>
  <br>

   <label for="male">Male</label>
  <input type="radio" name="gender" id="male" value="male"><br>
  <label for="female">Female</label>
  <input type="radio" name="gender" id="female" value="female"><br>

  </label>
<br>


  <label>
    Date of Birth:
    <input type="date" name="dob" >
  </label>
<br>

<label for="yes">Has Pseudonym</label>
  <input type="radio" name="has_pseudonym" id="true" value="true"><br>
  <label for="no">No Pseudonym</label>
  <input type="radio" name="has_pseudonym" id="false" value="false"><br>

  </label>
  <br>

  <label>
    Image URL:
    <input type="text" name="image_url" >
  </label>
  <br>
  <hr>

  <input type="submit" value="Add Author">
</form>
