<h1>Make a new character</h1>


 <form action="/books/<%=params[:book_id]%> /characters" method="post">
    <input name="authenticity_token" type="hidden" value="<% form_authenticity_token %>" >

    <label>
      Character name:
      <input type="text" name="name">
    </label>

    <label>
      Gender:
      <input type="text" name="gender">
    </label>

    <label>
      Quirk:
    <input type="text" name="quirk">
    </label>


    <input type="submit" value="Characterize!">

  </form>
