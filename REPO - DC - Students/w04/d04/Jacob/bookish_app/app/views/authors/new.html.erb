<h1>Create a new author:</h1>

<form action="/authors" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label>
    Name:
    <input type="text" name="name" id="name-attribute">
  </label>

  <label>
    Date of Birth:
    <input type="date" name="date_of_birth" id="date_of_birth-attribute">
  </label>

  <label>
    Gender:
    <input type="text" name="gender" id="gender-attribute">
  </label>

  <label>
    Pseudonym (?):
    <input type="checkbox" name="has_pseudonym" id="has_pseudonym-attribute">
  </label>

  <input type="submit" value="Add">
</form>
