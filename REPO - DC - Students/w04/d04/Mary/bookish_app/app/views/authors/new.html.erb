<h1>Add a new author</h1>

<form action="/authors" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label for="name-attribute">
    Name:
    <input type="text" name="name" id="name-attribute">
  </label>

  <label for="date-of-birth-attribute">
    Date of birth:
    <input type="date" name="date_of_birth" id="date-of-birth-attribute">
  </label>

  <label for="gender-attribute">
    Gender:
    <input type="text" name="gender" id="gender-attribute" >
  </label>

  <label for="has-pseudonym-attribute">
    Has pseudonym:
    <input type="checkbox" name="has_pseudonym" id="has-pseudonym-attribute">
  </label>

  <input type="submit" value="Add">
</form>
