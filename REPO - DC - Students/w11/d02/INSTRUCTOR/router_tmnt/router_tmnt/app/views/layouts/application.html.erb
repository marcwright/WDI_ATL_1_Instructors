<!DOCTYPE html>
<html>
<head>
  <title>RouterTmnt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
      <div class="tmnt-logo"></div>
    <div class="nav">
      <ul>
        <li><a href="#turtles">TURTLE INDEX</a></li>
      </ul>
    </div> <!-- div.nav -->
  </div> <!-- div.header -->
  <div class="content-wrapper">
    <%= yield %>
  </div>

<script type="text/template" id="turtle-list-item-template">
  <%% collection.each(function(turtle){  %>
    <li class="turtle <%%= turtle.get("eyeband_color") %>"><a href="#turtles/<%%= turtle.get("id") %>"><%%= turtle.get("name").toUpperCase()  %></a></li>
  <%% }) %>
</script>
 <!--  <li class="turtle blue"><a href="#turtles/3">LEONARDO</a></li> -->

<script type="text/template" id="turtle-profile-template">
  <h1 class="<%%= eyeband_color %>"><%%= name.toUpperCase() %></h1>
  <img src="<%%= image_url %>" alt="<%%= name %>">
  <p class="weapon <%%= eyeband_color %>"><%%= weapon.toUpperCase() %></p>
</script>

<!--   <h1 class="orange">MICHELANGELO</h1>
  <img src="http://img4.wikia.nocookie.net/__cb20140504203628/deathbattle/images/9/9c/Tmnt-michelangelo.png" alt="michelangelo">
  <p class="weapon orange">NUNCHAKUS</p> -->
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
