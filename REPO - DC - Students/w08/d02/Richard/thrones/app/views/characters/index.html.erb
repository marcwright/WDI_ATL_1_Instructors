<h1>Herp Derp is Coming</h1>

<form>
  <fieldset>
    <legend>New Character</legend>
    <label>
      Name
      <input type="text" name="name">
      <input type ="submit" value="Go to Bread">
    </label>
  </fieldset>
</form>




<ul>
  <% @characters.each do |character| %>
  <li data-character-id="<%= character.id%>" class='<%= character.is_dead ? 'dead' : '' %>'>
    <%= character.name %> is <% if character.is_dead == false %> ALIVE!<% else %> dead D: <%end%>
    <%= check_box_tag :is_dead, 'yes', character.is_dead %>
    <span>&hearts;</span>
  </li>
 <% end %>
</ul>

