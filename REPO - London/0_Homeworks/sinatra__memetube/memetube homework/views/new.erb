<form method='post' action='<%= @row.nil? ? "/videos" : "/videos/#{@row['id']}" %>'>
  <fieldset>
    <legend>Video Form</legend>
    <label>Title</label>
    <input value='<%= @row['title'] if @row %>' type='text' name='title' autofocus>
    <label>Description</label>
    <input value='<%= @row['description'] if @row %>' type='text' name='description'>
    <label>Video ID</label>
    <input value='<%= @row['url'] if @row %>' type='text' name='url'>
    <label>Genre</label>
    <input value='<%= @row['genre'] if @row %>' type='text' name='genre'>
    <br>
    <button><%= @row.nil? ? "Create Video" : "Edit Video"  %></button>
  </fieldset>
</form>
