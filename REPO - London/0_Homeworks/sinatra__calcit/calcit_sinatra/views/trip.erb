  <input id="mpg" name="mpg" type="text" placeholder="Enter miles per gallon" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="cost">How much does petrol cost per gallon?</label>  
  <div class="col-md-5">
  <input id="cost" name="cost" type="text" placeholder="" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="speed">How fast do you drive? </label>  
  <div class="col-md-5">
  <input id="speed" name="speed" type="text" placeholder="Enter mph" class="form-control input-md" required="">
    
  </div>
</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for=""></label>
  <div class="col-md-4">
    <button id="" name="" class="btn btn-primary">Get the cost</button>
  </div>
</div>

</fieldset>
</form>



