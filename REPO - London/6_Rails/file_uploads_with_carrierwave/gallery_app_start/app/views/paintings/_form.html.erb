<%= form_for @painting do |f| %>
  <%= f.hidden_field :gallery_id %>
  <% if @painting.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@painting.errors.count, "error")} prohibited this painting from being saved:" %>
      </h2>
      <ul>
        <% @painting.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :image, 'Image URL' %>
    <%= f.url_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
