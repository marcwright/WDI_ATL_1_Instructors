<% title "Ingredients" %>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
  </tr>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.image %></td>
      <td><%= link_to "Show", ingredient %></td>
      <td><%= link_to "Edit", edit_ingredient_path(ingredient) if(can? :update, ingredient) %></td>
      <td><%= link_to "Destroy", ingredient, confirm: 'Are you sure?', method: :delete if(can? :destroy, ingredient) %></td>
    </tr>
  <% end %>
</table>

<% if can? :create, Ingredient %>
  <p><%= link_to "New Ingredient", new_ingredient_path %></p>
<% end %>