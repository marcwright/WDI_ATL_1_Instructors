<div class="row">

    <div class="col-sm-4 col-sm-offset-4">
      <h2>
        Add yourself to the queue, what's your question.
      </h2>
      <hr>

      <%= form_for @turn, html: { class: 'form' } do |f| %>

        <div class="form-group">
            <%= f.text_field :subject, placeholder: "Subject", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :question, placeholder: "Question", class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.submit "Add me to the queue!", class: 'btn btn-primary btn-large' %>
        </div>

      <% end %>

    </div>

</div>

