<h1>Users#new</h1>

<% if @user.errors.any? %>

	<% @user.errors.full_messages.each do |value| %>	
		<div class="alert alert-danger" role="alert">
			<%= value %>
		</div>
	<% end %>
		

<% end %>


<%= form_for @user do |f| %>
	<div class="form-group">
		<%= f.text_field :name, placeholder: "name", class: "form-control" %>
	</div>
	<%= f.text_field :email, placeholder: "email" %>
	<%= f.text_field :github_handle, placeholder: "github handle" %>
	<%= f.text_field :password, placeholder: "password" %>
	<%= f.text_field :password_confirmation, placeholder: "password again.." %>
	<%= f.number_field :age, placeholder: "age" %>
	<%= f.submit %>
<% end %>

 








