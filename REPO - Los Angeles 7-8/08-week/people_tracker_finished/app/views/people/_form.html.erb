<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :height_in_inches %>
  <%= f.number_field :height_in_inches %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>

  <%= f.submit %>
<% end %>