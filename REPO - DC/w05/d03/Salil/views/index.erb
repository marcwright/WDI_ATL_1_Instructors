<form action='/' method='get'>
    <label>
      Stock Symbol:
      <input type="text" name="symbol" placeholder="Enter ticker">
      <input type="submit" value="Submit">
    </label>
</form>

<% if @last_price %>
  <h3><%= @stock_symbol.upcase %></h3>
  <h4><%= @name %></h4>
  <h4>Last Price: $<%=@last_price %></h4>
  <p>High: $<%=@high %></p>
  <p>Low: $<%=@low %></p>
  <p>Shares Outstanding: <%=@shares %></p>
<% else %>
    <p><%=@error %></p>
<% end %>

