<h1>Edit User</h1>


<% if @user.errors.any? %>
  <b>*DEEP VOICE OF GREG* ERRORS!!!!</b>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %>
      <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
  <%=f.label :name %>
  <%= f.text_field :name %>

  <%=f.label :email %>
  <%= f.text_field :email %>

  <%=f.label :password %>
  <%= f.password_field :password %>

  <%=f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Submit", id:'submit' %>
<% end %>


 <%= form_for @user, method: 'delete' do |f| %>
    <%= f.submit "destroy" %>
  <% end %>

  <%= link_to "Cancel", @user %>
