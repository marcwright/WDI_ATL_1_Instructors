<h1> Edit <%= @koopa.name %></h1>

<form action="/koopas/<%=@koopa.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
 <label>
    Name:
    <input type="text" name="name" value="<%= @koopa.name %>">
  </label>

  <label>
    New Shell Color:
    <input type="text" name="color" value="<%= @koopa.color %>">
  </label>

  <label>
    Does our Koopa Still have a shell?:
    <input type="checkbox" name="has_shell" value="true" checked>
  </label>

  <label>
    New Image:
    <input type="text" name="photo_url" value="<%= @koopa.photo_url %>">
  </label>
  <button>Update Our Koopa!</button>

</form>
