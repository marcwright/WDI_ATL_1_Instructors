<h1>Add a Coaster!</h1>
<form action="/coasters" method="post">
  <label>
    Coaster Name:
    <input type="text" name="name">
  </label>
  <label>
    Minimum Height:
    <input type="text" name="min_height">
  </label>
  <label>
    Top Speed:
    <input type="text" name="top_speed">
  </label>
  <label>
    Image:
    <input type="text" name="image_url">
  </label>
  <button>Add Coaster to Park</button>
</form>
