<h1>Add a New Book Here</h1>


<form action="/books/<%=params[:book_id]%>/characters" method="post">
  <input name="authenticity_token" type="hidden" value="<%form_authenticity_token%>"

    <label for="name-attribute">Name:</label>
  <input id="name-attribute" type="text" name="name">

    <label for="gender-attribute">Gender:</label>
  <input id="gender-attribute" type="text" name="gender">

    <label for="quirk-attribute">Quirk:</label>
  <input id="quirk-attribute" type="text" name="quirk">

  <input type="submit" value="Add This Character">

</form>
