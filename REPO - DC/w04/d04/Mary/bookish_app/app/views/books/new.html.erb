<h1>Add another book</h1>

<form action="/authors/<%= @author_id %>/books" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" >

  <label for="title-attribute">
    Title:
    <input type="text" name="title" id="title-attribute">
  </label>

  <label for="release-date-attribute">
    Release Date:
    <input type="date" name="release_date" id="release-date-attribute">
  </label>

  <label for="genre-attribute">
    Genre:
    <input type="text" name="genre" id="genre-attribute" >
  </label>

  <input type="submit" value="Add book">
</form>
