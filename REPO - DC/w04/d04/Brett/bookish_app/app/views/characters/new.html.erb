<h1>Add a character</h1>

<form action="/books/<%= @book_id %>/characters" method="post">
  <input name="authenticity-token" type="hidden" value="<%= form_authenticity_token %>">

  <label>Name:<input type="text" name="name"></label>
  <label>Gender:<input type="text" name="gender"></label>
  <label>Quirk:<input type="date" name="quirk"></label>

  <input type="submit" value="Create character">
</form>
