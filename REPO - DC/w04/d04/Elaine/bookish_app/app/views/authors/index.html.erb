<div class="page">
  <h1>All of the Authors:</h1>

  <% @authors.each do |author| %>
    <h2><a href="/authors/<%= author.id %>"><%= author.name %></a></h2>
    <p><b>Date of Birth:</b> <%= author.dob %></p>

    <p><b>Gender:</b> <%= author.gender %></p>

    <p><b>Has a pseudonym:</b> <%= author.has_pseudonym == true ? "Yes" : "No" %></p>
  <% end %>


  <p><a href="/authors/new">Add an Author</a></p>
  <p><a href="/">Home</a></p>
</div>
